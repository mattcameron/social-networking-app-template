<h1>Listing user_profiles</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Starsign</th>
      <th>Hobbies</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_profiles.each do |user_profile| %>
      <tr>
        <td><%= link_to user_profile.name, user_profile %></td>
        <td><%= user_profile.starsign %></td>
        <td><%= user_profile.hobbies %></td>
        <td><%= user_profile.age %></td>
        <td>
           <%= link_to 'Edit', edit_user_profile_path(user_profile) %>
        </td>
        <td><%= link_to 'Destroy', user_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User profile', new_user_profile_path %>
